<section id="product-grid" class="max-w-6xl mx-auto p-4">
  <h2 class="text-2xl font-semibold mb-4">{{ section.settings.heading }}</h2>

  <div id="cards-wrapper" class="grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4">
    {% for block in section.blocks %}
      <article class="product-card bg-white rounded-lg shadow-sm overflow-hidden">
        <div class="relative">
          <img class="primary w-full h-48 object-cover" src="{{ block.settings.primary_image | img_url: '600x' }}" alt="{{ block.settings.title }}">
          <img class="secondary absolute inset-0 w-full h-48 object-cover opacity-0 transition-opacity duration-300" src="{{ block.settings.secondary_image | img_url: '600x' }}" alt="">
        </div>
        <div class="p-3">
          <h3 class="text-base font-medium">{{ block.settings.title }}</h3>
          <p class="text-sm text-gray-500">{{ block.settings.price }}</p>
        </div>
      </article>
    {% endfor %}
  </div>

  <div class="mt-4 md:hidden">
    <button id="show-more" class="w-full py-2 rounded bg-gray-900 text-white">Show more</button>
  </div>
</section>

{% schema %}
{
  "name": "Product Grid",
  "settings": [
    { "id": "heading", "type": "text", "label": "Heading", "default": "Featured products" }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        { "id": "title", "type": "text", "label": "Title" },
        { "id": "primary_image", "type": "image_picker", "label": "Primary image" },
        { "id": "secondary_image", "type": "image_picker", "label": "Secondary image" },
        { "id": "price", "type": "text", "label": "Price" }
      ]
    }
  ],
  "presets": [{ "name": "Product Grid" }]
}
{% endschema %}
